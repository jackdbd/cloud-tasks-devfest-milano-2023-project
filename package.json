{
  "name": "root",
  "description": "Monorepo for my Cloud Tasks presentation at DevFest Milano 2023",
  "author": {
    "name": "Giacomo Debidda",
    "email": "giacomo@giacomodebidda.com",
    "url": "https://www.giacomodebidda.com/"
  },
  "license": "MIT",
  "private": true,
  "workspaces": [
    "infra",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "deploy": "npm run clean && npm run build && npm run pulumi:up",
    "dev": "run-p --print-label dev:*",
    "dev:api": "npm run dev -w api",
    "dev:enqueuer": "npm run dev -w enqueuer",
    "dev:frontend": "npm run dev -w frontend",
    "nuke": "rm -rf node_modules package-lock.json",
    "pulumi:stack:output": "npm run stack:output -w infra",
    "pulumi:refresh": "npm run refresh -w infra",
    "pulumi:up": "npm run up -w infra",
    "start": "run-p --print-label start:sse-backend start:sse-frontend start:enqueuer",
    "start:enqueuer": "npm run start -w enqueuer",
    "start:sse-backend": "npm run start -w sse-backend",
    "start:sse-frontend": "npm run start -w sse-frontend"
  },
  "dependencies": {},
  "devDependencies": {
    "@preact/preset-vite": "^2.7.0",
    "@types/node": "^20.9.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "tsm": "^2.3.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
