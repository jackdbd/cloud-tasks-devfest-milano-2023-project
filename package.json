{
  "name": "devfest-milano-2023",
  "main": "index.ts",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "deploy": "pulumi up --yes",
    "nuke": "rm -rf node_modules package-lock.json",
    "start": "run-p --print-label start:sse-backend start:sse-frontend start:enqueuer",
    "start:enqueuer": "npm run start -w enqueuer",
    "start:sse-backend": "npm run start -w sse-backend",
    "start:sse-frontend": "npm run start -w sse-frontend"
  },
  "dependencies": {
    "@pulumi/docker": "^4.4.5",
    "@pulumi/gcp": "^7.1.0",
    "@pulumi/pulumi": "^3.94.1",
    "@pulumi/synced-folder": "^0.11.1"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "tsm": "^2.3.0",
    "typescript": "^5.2.2"
  }
}
