{
  "name": "sse-backend",
  "version": "0.1.0",
  "description": "Server-sent events backend",
  "author": {
    "name": "Giacomo Debidda",
    "email": "giacomo@giacomodebidda.com",
    "url": "https://www.giacomodebidda.com/"
  },
  "license": "MIT",
  "private": true,
  "keywords": [
    "fastify",
    "sse"
  ],
  "type": "module",
  "module": "dist/main.js",
  "exports": {
    ".": "./dist/main.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist/ tsconfig.tsbuildinfo",
    "container:build": "docker build ./ --file Dockerfile --build-arg APP_NAME=sse-backend --tag sse-backend:latest",
    "container:inspect": "dive sse-backend:latest",
    "container:run": "docker run -it --rm --env PORT=8080 -p 8080:8080 sse-backend:latest",
    "start": "NODE_ENV=production PORT=4000 tsm ./src/main.ts",
    "start:js": "NODE_ENV=production PORT=4000 node ./dist/main.js"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "fastify-sse-v2": "^3.1.2"
  }
}
